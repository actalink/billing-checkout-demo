{
  "name": "billing-demo-backend",
  "version": "1.0.0",
  "description": "Express.js backend for Recipe Billing Demo",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "ts-node src/db/seed.ts",
    "db:clear": "ts-node src/db/seed.ts clear",
    "db:studio": "drizzle-kit studio",
    "test:cron": "node test-cron.js",
    "demo:performance": "node performance-demo.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "drizzle-orm": "^0.29.3",
    "postgres": "^3.4.7",
    "@paralleldrive/cuid2": "^2.2.2",
    "dotenv": "^16.3.1",
    "pg": "^8.16.3",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/node-fetch": "^2.6.11",
    "typescript": "^5.3.0",
    "ts-node-dev": "^2.0.0",
    "drizzle-kit": "^0.20.9"
  },
  "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
